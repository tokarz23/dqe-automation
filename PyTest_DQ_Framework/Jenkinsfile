import jenkins.model.Jenkins

pipeline {
    agent any

    environment {
        POSTGRES_SECRET = credentials('jenkins-postgres-credentials')
        // Jenkins exposes POSTGRES_SECRET_USR / POSTGRES_SECRET_PSW
    }

    stages {
        stage('System packages') {
            steps {
                sh '''
                    apt-get update
                    apt-get install -y libpq-dev python3 python3-pip python3-venv
                '''
            }
        }

        stage('Clone repository') {
            steps {
                git branch: 'main', url: 'https://github.com/tokarz23/dqe-automation'
            }
        }

        stage('Install dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r data_dev/requirements.txt
                    pip install -r PyTest_DQ_Framework/requirements.txt
                '''
            }
        }

        stage('Generate latest parquet data') {
            steps {
                sh '''
                    . venv/bin/activate
                    export PYTHONPATH=$WORKSPACE
                    python data_dev/main.py
                '''
            }
        }

        stage('Run PyTest DQ checks (parquet_data âˆª dq)') {
            steps {
                script {
                    sh '''
                        . venv/bin/activate
                        export PYTHONPATH=$WORKSPACE
                        cd PyTest_DQ_Framework
                        mkdir -p html_report
                    '''

                    int pytestStatus = sh(
                        script: '''
                            . venv/bin/activate
                            export PYTHONPATH=$WORKSPACE
                            cd PyTest_DQ_Framework
                            pytest tests -m "parquet_data or dq" \
                                --db_host="postgres" \
                                --db_port="5432" \
                                --db_name="mydatabase" \
                                --db_user=$POSTGRES_SECRET_USR \
                                --db_password=$POSTGRES_SECRET_PSW \
                                --html=html_report/index.html --self-contained-html
                        ''',
                        returnStatus: true
                    )

                    if (pytestStatus == 0) {
                        echo 'PyTest completed successfully.'
                    } else if (pytestStatus == 1) {
                        currentBuild.result = 'UNSTABLE'
                        echo "PyTest reported data-quality failures (exit code ${pytestStatus}). Build marked UNSTABLE."
                    } else {
                        error("PyTest exited with code ${pytestStatus}; treating as infrastructure/configuration error.")
                    }
                }
            }
        }

        stage('Archive HTML report') {
            steps {
                script {
                    def reportDir  = 'PyTest_DQ_Framework/html_report'
                    def reportFile = "${reportDir}/index.html"

                    if (fileExists(reportFile)) {
                        archiveArtifacts artifacts: "${reportDir}/**", allowEmptyArchive: false, fingerprint: true

                        def htmlPublisherPlugin = Jenkins.instance.pluginManager.getPlugin('htmlpublisher')
                        if (htmlPublisherPlugin) {
                            publishHTML(target: [
                                allowMissing: false,
                                keepAll: true,
                                reportDir: reportDir,
                                reportFiles: 'index.html',
                                reportName: 'HTML Test Report'
                            ])
                        } else {
                            echo 'HTML Publisher plugin not installed; skipping publishHTML step.'
                        }
                    } else {
                        echo 'HTML report not found; skipping archive/publish.'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'DQ pipeline execution completed.'
        }
        success {
            echo 'DQ pipeline executed successfully.'
        }
        unstable {
            echo 'DQ pipeline completed with data-quality failures (UNSTABLE).'
        }
        failure {
            echo 'DQ pipeline failed due to infrastructure or configuration issues.'
        }
    }
}